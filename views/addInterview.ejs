<link rel="stylesheet" href="/css/StudentFrom.css">

<section id="student-form-container">

  <div class="student-from">
    <h1>Add Interview</h1>
    <form class="row g-3" method="post" action="/interview/add-interview-to-student">
      <div class="col-md-6">
        <label for="inputCompanyName4" class="form-label">Company Name</label>
        <input type="text" disabled class="form-control" name="company_name" value="<%=company.company_name%>"
          id="inputCompanyName4" required>
      </div>
      <div class="col-md-6">
        <label for="inputDate4" class="form-label">Interview Date</label>
        <input type="date" disabled class="form-control" value="<%=company.interview_date%>" name="interview_date"
          id="inputDate4" required>
      </div>
      <input type="hidden" class="form-control" value="<%=company.id%>" name="company_id" id="inputDate4" required>
      <div class="col-md-6">
        <label for="inputState" class="form-label">Student</label>
        <select id="inputState" name="student" class="form-select">
          <%for(let student of allStudent){%>
            <option value="<%=student.id%>">
              <%=student.email%>
            </option>
          <%}%>
        </select>
      </div>
      <div class="col-md-6">
        <label for="inputState" class="form-label">status</label>
        <select id="inputState" name="status" class="form-select">
          <option value="PASS">PASS</option>
          <option value="FAIL">FAIL</option>
          <option value="OnHold">OnHold</option>
          <option value="Didnt Attempt">Didnt Attempt</option>
        </select>
      </div>
      <div class="col-12 d-flex justify-content-center">
        <button type="submit" class="btn btn-danger">Add Interview</button>
      </div>
    </form>
  </div>
</section>