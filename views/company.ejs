<link rel="stylesheet" href="/css/StudentFrom.css">

<section id="student-form-container">
  <div class="student-from">
    <h1>Add Company</h1>
    <form class="row g-3" method="post" action="/interview/create-company">
      <div class="col-md-12">
        <label for="inputCompanyName4" class="form-label">Company Name</label>
        <input type="text" class="form-control" name="company_name" id="inputCompanyName4" required>
      </div>
      <div class="col-md-6">
        <label for="inputDate4" class="form-label">Interview Date</label>
        <input type="date" class="form-control" name="interview_date" id="inputDate4" required>
      </div>
      <div class="col-md-6">
        <label for="inputLocation4" class="form-label">Work Location</label>
        <input type="text" class="form-control" name="work_location" id="inputLocation4" required>
      </div>
      <div class="col-12 d-flex justify-content-center">
        <button type="submit" class="btn btn-danger">Add Company</button>
      </div>
    </form>
  </div>
</section>