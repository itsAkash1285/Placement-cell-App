<link rel="stylesheet" href="/css/StudentUpdateFrom.css">

<section id="student-form-container">

  <div class="student-from">
    <h1>Update Student</h1>
    <form class="row g-3" method="post" action="/student/update-student/<%=student.id%>">
      <div class="col-md-6">
        <label for="inputName4" class="form-label">Student Name</label>
        <input type="text" class="form-control" name="name" value="<%=student.name%>" id="inputName4" required>
      </div>
      <div class="col-md-6">
        <label for="inputEmail4" class="form-label">Student Email</label>
        <input type="email" value="<%=student.email%>" class="form-control" name="email" id="inputEmail4" required>
      </div>
      <div class="col-md-6">
        <label for="inputBatch4" class="form-label">Student Batch</label>
        <input type="text" value="<%=student.batch%>" class="form-control" name="batch" id="inputBatch4"
          placeholder="Like OCT-21" required>
      </div>
      <div class="col-md-6">
        <label for="inputCollege4" class="form-label">Student College</label>
        <input type="text" value="<%=student.college%>" class="form-control" name="college" id="inputCollege4" required>
      </div>
      <div class="col-md-6">
        <label for="inputDSA" class="form-label">DSA Final Score</label>
        <input type="number" value="<%=student.dsa_score%>" class="form-control" min="0" max="100" name="dsa_score"
          id="inputDSA" placeholder="0-100" required>
      </div>
      <div class="col-md-6">
        <label for="inputwebd" class="form-label">WebD Final Score</label>
        <input type="number" value="<%=student.webd_score%>" class="form-control" min="0" max="100" name="webd_score"
          id="inputwebd" placeholder="0-100" required>
      </div>
      <div class="col-md-6">
        <label for="inputReact" class="form-label">React Final Score</label>
        <input type="number" value="<%=student.react_score%>" class="form-control" min="0" max="100" name="react_score"
          id="inputReact" placeholder="0-100" required>
      </div>
      <div class="col-md-6">
        <label for="inputState" class="form-label">Student Placement Status</label>
        <select id="inputState" name="placement_status" class="form-select" required>
          <%if(student.placement_status=="notplace"){%>
            <option selected value="notplace">Not place</option>
            <option value="place">Place</option>
            <%}else{%>
              <option selected value="place">Place</option>
              <option value="notplace">Not place</option>
              <%}%>
        </select>
      </div>
      <div class="col-12 d-flex justify-content-center">
        <button type="submit" class="btn btn-danger">Update</button>
      </div>
    </form>
  </div>
  <!-- interview sedules list -->
  <div class="company-display">
    <table class="table">
      <!-- <h2>Companies</h2> -->
      <thead>
        <tr>
          <th scope="col">Company Name</th>
          <th scope="col">Interview Date</th>
          <th scope="col">Location</th>
          <th scope="col">Status</th>
          <th scope="col">update</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <%for(let interview of interviewList){%>
          <tr>
            <td>
              <%=interview.company.company_name%>
            </td>
            <td>
              <%=interview.company.interview_date%>
            </td>
            <td>
              <%=interview.company.work_location%>
            </td>
            <td>
              <%=interview.interviewStatus%>
            </td>

            <td>
              <form action="/interview/update-interview-status/<%=interview._id%>" method="post">
                <select id="inputState" name="placement_status" class="form-select" required>
                  <option value="PASS">PASS</option>
                  <option value="FAIL">FAIL</option>
                  <option value="OnHold">OnHold</option>
                  <option value="Didnt Attempt">Didnt Attempt</option>
                </select>
            </td>
            <td><button type="submit" class="btn btn-info">Update</button></form>
            </td>
          </tr>
          <%}%>
      </tbody>
    </table>
  </div>
</section>